---
import Layout from '~/layouts/PageLayout.astro';

import type { MetaData, SeoData } from '~/types';
import type { HreflangAlternate } from '~/data/seo';

export interface Props {
  frontmatter: {
    title?: string;
    metadata?: MetaData;
    seo?: SeoData;
  };
  languageAlternates?: HreflangAlternate[];
  ogLocaleAlternates?: string[];
}

const { frontmatter, languageAlternates, ogLocaleAlternates } = Astro.props;
const isTermsPage = Astro.url.pathname.startsWith('/terms/');

const metadata: MetaData = {
  ...frontmatter?.metadata,
  title: frontmatter?.title ?? frontmatter?.metadata?.title,
  ...(isTermsPage
    ? {
        robots: {
          index: false,
          follow: false,
        },
      }
    : {}),
};

const seo: SeoData = {
  ...frontmatter?.seo,
  title: frontmatter?.seo?.title ?? frontmatter?.title ?? frontmatter?.metadata?.title,
  description: frontmatter?.seo?.description ?? frontmatter?.metadata?.description,
};
---

<Layout metadata={metadata} seo={seo} languageAlternates={languageAlternates} ogLocaleAlternates={ogLocaleAlternates}>
  <slot name="schema" slot="schema" />
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
    <div
      class="mx-auto prose prose-lg max-w-4xl prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <slot />
    </div>
  </section>
</Layout>
