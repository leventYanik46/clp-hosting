---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import Metadata from '~/components/common/Metadata.astro';
import StructuredData from '~/components/common/StructuredData.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import type { MetaData as MetaDataType } from '~/types';
import { getLangFromPathname, type HreflangAlternate } from '~/data/seo';

export interface Props {
  metadata?: MetaDataType;
  languageAlternates?: HreflangAlternate[];
  ogLocaleAlternates?: string[];
}

const { metadata = {}, languageAlternates, ogLocaleAlternates } = Astro.props;
const { language, textDirection } = I18N;
const htmlLang = getLangFromPathname(Astro.url.pathname, language as 'en' | 'tr' | 'es' | 'pt' | 'fr');
---

<!doctype html>
<html lang={htmlLang} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <Metadata {...metadata} languageAlternates={languageAlternates} ogLocaleAlternates={ogLocaleAlternates} />
    <StructuredData metadata={metadata}>
      <slot name="schema" slot="schema" />
    </StructuredData>
    <SiteVerification />
    <Analytics />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />
    <!-- Load Netlify Identity widget -->
    <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>    
    <script defer>
      const ni = window.netlifyIdentity;
      if (!ni) return;
      ni.on("init", () => {
        if (window.location.hash.includes("invite_token")) {
          ni.open("signup");
          window.history.replaceState(null, null, "/#");
        }
      });
      ni.init();
    </script>
    
  </body>
</html>
