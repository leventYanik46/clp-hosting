---
import FormContainer from '~/components/ui/EvalForm.astro';
import Headline from '~/components/ui/Headline.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,
  id,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---


  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <div class="flex justify-center mb-40">
      
        <div class={`flex flex-col rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-[80%] ${classes?.container ?? ''}`}>
        <FormContainer
          inputs={inputs}
          textarea={textarea}
          disclaimer={disclaimer}
          button={button}
          description={description}

        />
        </div>
      </div>
    )
  }

