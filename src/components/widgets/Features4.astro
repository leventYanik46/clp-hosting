---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import ItemGrid3 from '~/components/ui/ItemGrid3.astro';
import ImageGrid from '~/components/ui/ImageGrid.astro';
import type { Features as Props } from '~/types';
const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 3,
  defaultIcon,
  id,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />
  <ImageGrid
    items={[
      {
        src: '~/assets/images/map-herndon.jpg',
        alt: 'Maps location image',
        href: 'https://www.google.com/maps/place/Capitol+Law+Partners',
      },
      {
        src: '~/assets/images/map-herndon.jpg',
        alt: 'Maps location image',
        href: 'https://www.google.com/maps/place/5678+Lorem+Ipsum+St,+Madrid/',
      },
      {
        src: '~/assets/images/map-herndon.jpg',
        alt: 'Maps location image',
        href: 'https://www.google.com/maps/place/9012+Lorem+Ipsum+St,+Sydney/',
      },
      {
        src: '~/assets/images/map-herndon.jpg',
        alt: 'Maps location image',
        href: 'https://www.google.com/maps/place/3456+Lorem+Ipsum+St,+SÃ£o+Paulo/',
      },
    ]}
    columns={columns}
    classes={{
      image: 'w-full h-auto',
    }}
  />
  <div class="mt-8"></div> <!-- Add space between the image grid and the item grid -->
  <ItemGrid3
    items={items}
    columns={columns}
    defaultIcon={defaultIcon}
    classes={{
      container: 'gap-4 md:gap-6',
      panel:
        'rounded-lg shadow-[0_4px_30px_rgba(0,0,0,0.1)] backdrop-blur border border-[#ffffff29] bg-white p-6',
      icon: 'w-16 h-16 mb-6 text-primary',
      ...((classes?.items as Record<string, never>) ?? {}),
    }}
  />
</WidgetWrapper>
