---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import library from '~/locales/en/index.json'

const metadata = {
  title: 'Capitol Law Partners',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget (unchanged) ******************* -->
  <Hero
    image={{ src: '~/assets/images/high-resolution-photo-of-us-capitol-l.png', alt: 'Us capitol building image' }}
    actions={[
      {
        variant: 'primary',
        text: library.hero.actionSchedule,
        href: '/en/Schedule',
      },
      { text: library.hero.actionEval, href: '/en/evaluations', variant: 'primary' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-blue-700 highlight"> {library.hero.titleBold}</span><span class="hidden xl:inline"> {library.hero.titleInline}</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="hidden sm:inline font-semibold">{library.hero.subtitleBold}</span>
      {library.hero.subtitleInline}
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget (text values from JSON) *************** -->
  <Features
    id="Practice Areas"
    tagline={library.practiceAreas.tagline}
    title={library.practiceAreas.title}
    subtitle={library.practiceAreas.subtitle}
    items={library.practiceAreas.items}
  />

  <!-- Content Widget for Cagatay **************** -->
  <Content
    isReversed
    tagline={library.team.tagline}
    title={library.team.title}
    items={[{
      title: library.team.members[0].name,
      description: library.team.members[0].description,
    }]}
    image={{ src: '~/assets/images/cagatay-profile.png', alt: 'Colorful Image' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">{library.team.members[0].name}</h3>
      {library.team.members[0].description}
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50"></div>
    </Fragment>
  </Content>

  <!-- Content Widget for Sena **************** -->
  <Content
    isAfterContent
    items={[{
      title: library.team.members[1].name,
      description: library.team.members[1].description,
    }]}
    image={{ src: '~/assets/images/sena-profile-alternate.png', alt: 'Sena Image' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">{library.team.members[1].name}</h3>
      {library.team.members[1].description}
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50"></div>
    </Fragment>
  </Content>

  <!-- Content Widget for Shafeek **************** -->
  <Content
    isReversed
    isAfterContent
    items={[{
      title: library.team.members[2].name,
      description: library.team.members[2].description,
    }]}
    image={{ src: '~/assets/images/shafeek-profile-prefered.png', alt: 'Shafeek Image' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">{library.team.members[2].name}</h3>
      {library.team.members[2].description}
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->
  <Steps
    title={library.steps.title}
    items={library.steps.items}
  />

  <!-- BlogLatestPosts Widget ******** -->
  <BlogLatestPosts
    title={library.blog.title}
    information={library.blog.information}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title={library.faqs.title}
    subtitle={library.faqs.subtitle}
    tagline={library.faqs.tagline}
    items={library.faqs.items.map(item => ({
      title: item.question,
      description: item.answer,
    }))}
  />

  <!-- Stats Widget ****************** -->
  <Stats stats={library.stats.items} />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      { variant: 'primary', text: library.cta.actionText, href: '/en/contact' },
    ]}
  >
    <Fragment slot="title">
      {library.cta.title}
    </Fragment>
    <Fragment slot="subtitle">
      {library.cta.subtitle}
    </Fragment>
  </CallToAction>
</Layout>
